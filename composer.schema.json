{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Local Composer schema (minimal)",
  "type": "object",
  "properties": {
    "$schema": { "type": "string" },
    "name": { "type": "string" },
    "type": { "type": "string" },
    "description": { "type": "string" },
    "keywords": { "type": "array", "items": { "type": "string" } },
    "license": { "type": "string" },
    "require": { "type": "object", "additionalProperties": { "type": "string" } },
    "require-dev": { "type": "object", "additionalProperties": { "type": "string" } },
    "autoload": { "type": "object" },
    "autoload-dev": { "type": "object" },
    "scripts": { "type": "object" },
    "extra": { "type": "object" },
    "config": { "type": "object" },
    "minimum-stability": { "type": "string" },
    "prefer-stable": { "type": "boolean" }
  },
  "additionalProperties": true
}
